# SSL Monitor Pro - Environment Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=production
DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production-must-be-32-chars
API_V1_PREFIX=/api/v1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://ssl_monitor:password@localhost:5432/ssl_monitor
POSTGRES_HOST=localhost
POSTGRES_USER=ssl_monitor
POSTGRES_PASSWORD=change-me-secure-password
POSTGRES_DB=ssl_monitor

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0
UPSTASH_REDIS_URL=redis://default:password@host.upstash.io:6379

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# STRIPE PAYMENT INTEGRATION
# =============================================================================
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================================================================
# EMAIL CONFIGURATION (Brevo/Sendinblue)
# =============================================================================
BREVO_API_KEY=xkeysib_your_brevo_api_key_here
BREVO_FROM_EMAIL=notifications@cloudsre.xyz
BREVO_FROM_NAME=SSL Monitor Pro

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=your-chat-id-here

# =============================================================================
# SLACK INTEGRATION
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_ENABLED=True
HEALTH_CHECK_ENABLED=True

# =============================================================================
# SSL MONITORING SETTINGS
# =============================================================================
SSL_CHECK_INTERVAL=300  # 5 minutes
SSL_CHECK_TIMEOUT=10    # seconds
SSL_WARNING_DAYS=30     # days before expiry

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
CORS_ORIGINS=https://cloudsre.xyz,https://www.cloudsre.xyz,https://ssl-monitor-api.onrender.com

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_TITLE=SSL Monitor Pro API
API_DESCRIPTION=Professional SSL Certificate Monitoring API
API_VERSION=1.0.0

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================
RENDER_EXTERNAL_URL=https://ssl-monitor-api.onrender.com
HOST=0.0.0.0
PORT=8000

# =============================================================================
# FRONTEND SETTINGS
# =============================================================================
VITE_API_BASE_URL=https://ssl-monitor-api.onrender.com
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_SENTRY=true
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ENVIRONMENT=production

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit this file with real secrets to version control
# 2. Use environment-specific .env files (.env.development, .env.production)
# 3. Rotate secrets regularly in production
# 4. Use strong, unique passwords for all services
# 5. Enable 2FA on all cloud service accounts